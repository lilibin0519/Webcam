<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/qb_px_20"
    android:gravity="center_vertical"
    android:background="@drawable/bg_search_hot"
    >

    <ImageView
        android:layout_width="@dimen/qb_px_50"
        android:layout_height="@dimen/qb_px_42"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_hot_search"
        />
    <TextView
        android:id="@+id/layout_hot_search_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/qb_px_20"
        android:textSize="@dimen/qb_px_42"
        android:textColor="@color/titleText"
        />
</LinearLayout>