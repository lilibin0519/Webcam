<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_live_page_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/qb_px_50"
        android:paddingEnd="@dimen/qb_px_50"
        android:paddingTop="@dimen/qb_px_40"
        android:background="@drawable/bg_tab"
        >
        <android.support.design.widget.TabLayout
            android:id="@+id/activity_live_page_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabTextAppearance="@style/TabLayoutTextStyle"
            app:tabSelectedTextColor="@color/black"
            app:tabTextColor="@android:color/darker_gray"
            app:tabMode="scrollable"/>
        <include layout="@layout/line_layout" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/qb_px_90"
        android:paddingEnd="@dimen/qb_px_70"
        android:paddingTop="@dimen/qb_px_20"
        android:paddingBottom="@dimen/qb_px_60"
        android:background="@drawable/bg_rooms"
        >
        <RelativeLayout
            android:id="@+id/activity_live_page_display"
            android:layout_width="@dimen/qb_px_660"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            >
            <ImageView
                android:id="@+id/activity_live_page_gift"
                android:layout_width="@dimen/qb_px_100"
                android:layout_height="@dimen/qb_px_100"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_cam_gift"
                />
            <ImageView
                android:id="@+id/activity_live_page_talk"
                android:layout_width="@dimen/qb_px_100"
                android:layout_height="@dimen/qb_px_100"
                android:contentDescription="@string/app_name"
                android:paddingTop="@dimen/qb_px_30"
                android:paddingBottom="@dimen/qb_px_20"
                android:paddingStart="@dimen/qb_px_20"
                android:paddingEnd="@dimen/qb_px_20"
                android:src="@drawable/icon_cam_talk"
                android:layout_alignParentEnd="true"
                android:layout_above="@id/activity_live_page_gift"
                android:background="@drawable/bg_translucent_big_round"
                android:scaleType="fitCenter"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/activity_live_page_sign"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_200"
                android:textSize="@dimen/qb_px_40"
                android:textColor="@android:color/white"
                android:padding="@dimen/qb_px_20"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@id/activity_live_page_gift"
                android:layout_marginEnd="@dimen/qb_px_20"
                android:background="@drawable/bg_translucent_big_radius"
                />
            <LinearLayout
                android:id="@+id/activity_live_page_label_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="@dimen/qb_px_40"
                    android:layout_height="@dimen/qb_px_40"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/icon_view_history"
                    android:layout_marginEnd="@dimen/qb_px_10"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/qb_px_36"
                    android:text="正在观看"
                    />
            </LinearLayout>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/activity_live_page_current_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/activity_live_page_gift"
                android:layout_above="@id/activity_live_page_sign"
                android:layout_marginEnd="@dimen/qb_px_20"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/qb_px_40"
                app:riv_corner_radius="@dimen/qb_px_80"
                app:riv_border_width="@dimen/qb_px_4"
                app:riv_border_color="@color/pink"
                android:layout_below="@id/activity_live_page_label_2"
                android:layout_marginTop="@dimen/qb_px_20"
                android:scaleType="centerCrop"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/activity_live_page_label_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            >
            <ImageView
                android:layout_width="@dimen/qb_px_40"
                android:layout_height="@dimen/qb_px_40"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_view_history"
                android:layout_marginEnd="@dimen/qb_px_10"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/qb_px_36"
                android:text="正在直播"
                />
        </LinearLayout>
        <com.wstv.webcam.widget.NoScrollViewPager
            android:id="@+id/activity_live_page_pager"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/activity_live_page_display"
            android:layout_below="@id/activity_live_page_label_1"
            android:layout_marginTop="@dimen/qb_px_20"
            />
    </RelativeLayout>
</LinearLayout>