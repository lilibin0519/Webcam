<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingStart="@dimen/qb_px_40"
    android:paddingEnd="@dimen/qb_px_40"
    android:paddingBottom="@dimen/qb_px_40"
    android:paddingTop="@dimen/qb_px_20">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/fragment_hall_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/fragment_hall_content_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_280"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_alignParentBottom="true"
                >
                <LinearLayout
                    android:layout_width="@dimen/qb_px_60"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="@dimen/qb_px_36"
                        android:layout_height="@dimen/qb_px_36"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_view_history"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/qb_px_34"
                        android:text="@string/label_cam_now"
                        android:layout_marginTop="@dimen/qb_px_10"
                        />
                </LinearLayout>
                <com.libin.mylibrary.widget.swiperecyclerview.SwipeRecyclerView
                    android:id="@+id/fragment_hall_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentTop="true"
                android:layout_above="@id/fragment_hall_content_layout"
                >
                <RelativeLayout
                    android:layout_width="@dimen/qb_px_500"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/qb_px_10"
                    >
                    <LinearLayout
                        android:id="@+id/fragment_hall_advice_label"
                        android:layout_width="@dimen/qb_px_400"
                        android:layout_height="@dimen/qb_px_84"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <ImageView
                            android:layout_width="@dimen/qb_px_40"
                            android:layout_height="@dimen/qb_px_40"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/icon_recommend"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/qb_px_36"
                            android:text="为您推荐"
                            />
                        <ImageView
                            android:layout_width="@dimen/qb_px_30"
                            android:layout_height="@dimen/qb_px_30"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/arrow_right"
                            android:tint="@color/pink"
                            android:scaleType="fitCenter"
                            android:visibility="gone"
                            />
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/fragment_hall_advice_1_layout"
                        android:layout_below="@id/fragment_hall_advice_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/fragment_hall_advice_1"
                            android:layout_width="@dimen/qb_px_460"
                            android:layout_height="@dimen/qb_px_230"
                            app:riv_corner_radius="@dimen/qb_px_20"
                            android:scaleType="centerCrop"
                            />
                        <View
                            android:layout_width="@dimen/qb_px_460"
                            android:layout_height="@dimen/qb_px_100"
                            android:background="@drawable/bg_item_room"
                            android:layout_alignBottom="@id/fragment_hall_advice_1"
                            />
                        <TextView
                            android:id="@+id/fragment_hall_advice_1_views"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/qb_px_22"
                            android:textColor="@color/colorPrimary"
                            tools:text="4106"
                            android:layout_alignBottom="@id/fragment_hall_advice_1"
                            android:layout_alignEnd="@id/fragment_hall_advice_1"
                            android:layout_marginEnd="@dimen/qb_px_10"
                            android:layout_marginBottom="@dimen/qb_px_10"
                            android:paddingStart="@dimen/qb_px_10"
                            android:paddingEnd="@dimen/qb_px_10"
                            android:paddingTop="@dimen/qb_px_5"
                            android:paddingBottom="@dimen/qb_px_5"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/fragment_hall_advice_1"
                            android:layout_alignStart="@id/fragment_hall_advice_1"
                            android:layout_toStartOf="@id/fragment_hall_advice_1_views"
                            android:layout_marginStart="@dimen/qb_px_10"
                            android:layout_marginBottom="@dimen/qb_px_10">
                            <TextView
                                android:id="@+id/fragment_hall_advice_1_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/qb_px_22"
                                android:textColor="@color/colorPrimary"
                                tools:text="主播昵称"
                                android:paddingStart="@dimen/qb_px_10"
                                android:paddingEnd="@dimen/qb_px_10"
                                android:paddingTop="@dimen/qb_px_5"
                                android:paddingBottom="@dimen/qb_px_5"
                                android:lines="1"
                                android:ellipsize="end"
                                />
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/fragment_hall_advice_2_layout"
                        android:layout_below="@id/fragment_hall_advice_1_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/fragment_hall_advice_2"
                            android:layout_width="@dimen/qb_px_220"
                            android:layout_height="@dimen/qb_px_220"
                            app:riv_corner_radius="@dimen/qb_px_20"
                            android:layout_marginTop="@dimen/qb_px_20"
                            android:scaleType="centerCrop"
                            />
                        <View
                            android:layout_width="@dimen/qb_px_220"
                            android:layout_height="@dimen/qb_px_100"
                            android:background="@drawable/bg_item_room"
                            android:layout_alignBottom="@id/fragment_hall_advice_2"
                            />
                        <TextView
                            android:id="@+id/fragment_hall_advice_2_views"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/qb_px_22"
                            android:textColor="@color/colorPrimary"
                            tools:text="4106"
                            android:layout_alignBottom="@id/fragment_hall_advice_2"
                            android:layout_alignEnd="@id/fragment_hall_advice_2"
                            android:layout_marginEnd="@dimen/qb_px_10"
                            android:layout_marginBottom="@dimen/qb_px_10"
                            android:paddingStart="@dimen/qb_px_10"
                            android:paddingEnd="@dimen/qb_px_10"
                            android:paddingTop="@dimen/qb_px_5"
                            android:paddingBottom="@dimen/qb_px_5"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/fragment_hall_advice_2"
                            android:layout_alignStart="@id/fragment_hall_advice_2"
                            android:layout_toStartOf="@id/fragment_hall_advice_2_views"
                            android:layout_marginStart="@dimen/qb_px_10"
                            android:layout_marginBottom="@dimen/qb_px_10">
                            <TextView
                                android:id="@+id/fragment_hall_advice_2_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/qb_px_22"
                                android:textColor="@color/colorPrimary"
                                tools:text="主播昵称"
                                android:paddingStart="@dimen/qb_px_10"
                                android:paddingEnd="@dimen/qb_px_10"
                                android:paddingTop="@dimen/qb_px_5"
                                android:paddingBottom="@dimen/qb_px_5"
                                android:lines="1"
                                android:ellipsize="end"
                                />
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/fragment_hall_advice_3_layout"
                        android:layout_below="@id/fragment_hall_advice_1_layout"
                        android:layout_toEndOf="@id/fragment_hall_advice_2_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/fragment_hall_advice_3"
                            android:layout_width="@dimen/qb_px_220"
                            android:layout_height="@dimen/qb_px_220"
                            app:riv_corner_radius="@dimen/qb_px_20"
                            android:layout_marginStart="@dimen/qb_px_20"
                            android:layout_marginTop="@dimen/qb_px_20"
                            android:scaleType="centerCrop"
                            />
                        <View
                            android:layout_width="@dimen/qb_px_220"
                            android:layout_height="@dimen/qb_px_100"
                            android:background="@drawable/bg_item_room"
                            android:layout_marginStart="@dimen/qb_px_20"
                            android:layout_marginTop="@dimen/qb_px_20"
                            android:layout_alignBottom="@id/fragment_hall_advice_3"
                            />
                        <TextView
                            android:id="@+id/fragment_hall_advice_3_views"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/qb_px_22"
                            android:textColor="@color/colorPrimary"
                            tools:text="4106"
                            android:layout_alignBottom="@id/fragment_hall_advice_3"
                            android:layout_alignEnd="@id/fragment_hall_advice_3"
                            android:layout_marginEnd="@dimen/qb_px_10"
                            android:layout_marginBottom="@dimen/qb_px_10"
                            android:paddingStart="@dimen/qb_px_10"
                            android:paddingEnd="@dimen/qb_px_10"
                            android:paddingTop="@dimen/qb_px_5"
                            android:paddingBottom="@dimen/qb_px_5"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/fragment_hall_advice_3"
                            android:layout_alignStart="@id/fragment_hall_advice_3"
                            android:layout_toStartOf="@id/fragment_hall_advice_3_views"
                            android:layout_marginStart="@dimen/qb_px_10"
                            android:layout_marginBottom="@dimen/qb_px_10">
                            <TextView
                                android:id="@+id/fragment_hall_advice_3_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/qb_px_22"
                                android:textColor="@color/colorPrimary"
                                tools:text="主播昵称"
                                android:paddingStart="@dimen/qb_px_10"
                                android:paddingEnd="@dimen/qb_px_10"
                                android:paddingTop="@dimen/qb_px_5"
                                android:paddingBottom="@dimen/qb_px_5"
                                android:lines="1"
                                android:ellipsize="end"
                                />
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
                <com.youth.banner.Banner
                    android:id="@+id/fragment_hall_banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/qb_px_20"
                    android:layout_marginBottom="@dimen/qb_px_30"
                    android:layout_marginStart="@dimen/qb_px_44"
                    />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>