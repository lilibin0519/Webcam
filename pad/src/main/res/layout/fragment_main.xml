<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="false"
    android:id="@+id/activity_live_page_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/temp_status"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_tab">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:padding="0dp"
            app:contentInsetStart="0px"
            android:fitsSystemWindows="true"
            android:id="@+id/title_bar_parent"
            android:minHeight="0dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/titleBar">
            <LinearLayout
                android:id="@+id/title_bar_background"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_126"
                android:gravity="center_vertical"
                >
                <android.support.design.widget.TabLayout
                    android:id="@+id/fragment_main_tab"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:tabTextAppearance="@style/TabLayoutTextStyle"
                    app:tabSelectedTextColor="@color/colorAccent"
                    app:tabTextColor="@color/grayText"
                    app:tabMode="scrollable"/>

                <include layout="@layout/line_layout_2" />
                <LinearLayout
                    android:id="@+id/fragment_main_record"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/qb_px_40"
                    android:paddingEnd="@dimen/qb_px_40"
                    >
                    <ImageView
                        android:layout_width="@dimen/qb_px_30"
                        android:layout_height="@dimen/qb_px_30"
                        android:contentDescription="@string/app_name"
                        android:layout_marginEnd="@dimen/qb_px_20"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_view_history"
                        android:visibility="gone"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/qb_px_34"
                        android:textColor="@color/titleText"
                        android:text="切换用户"
                        android:layout_marginEnd="@dimen/qb_px_20"
                        />
                    <ImageView
                        android:layout_width="@dimen/qb_px_30"
                        android:layout_height="@dimen/qb_px_30"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/arrow_right"
                        android:tint="@color/pink"
                        android:scaleType="fitCenter"
                        />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.Toolbar>
    </LinearLayout>

    <include layout="@layout/line_layout" />
    <com.wstv.pad.widget.NoScrollViewPager
        android:id="@+id/fragment_main_pager"
        android:background="@drawable/bg_rooms"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>