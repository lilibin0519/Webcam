<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingStart="@dimen/qb_px_40"
    android:paddingEnd="@dimen/qb_px_40"
    android:paddingTop="@dimen/qb_px_60"
    android:paddingBottom="@dimen/qb_px_60"
    >

    <TextView
        android:id="@+id/item_cash_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:lines="2"
        android:textColor="@color/label_gray"
        android:textSize="@dimen/qb_px_36"
        android:lineSpacingExtra="@dimen/qb_px_10"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/item_cash_time"
        android:layout_marginEnd="@dimen/qb_px_40"
        >
        <TextView
            android:id="@+id/item_cash_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/titleText"
            android:textSize="@dimen/qb_px_44"
            android:text="充值"
            />
        <TextView
            android:id="@+id/item_cash_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/titleText"
            android:textSize="@dimen/qb_px_70"
            android:layout_marginTop="@dimen/qb_px_30"
            android:text="+100"
            />
    </LinearLayout>
</RelativeLayout>