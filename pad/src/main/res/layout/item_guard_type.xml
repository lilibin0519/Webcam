<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/qb_px_20"
    android:paddingBottom="@dimen/qb_px_20"
    android:paddingStart="@dimen/qb_px_40"
    android:paddingEnd="@dimen/qb_px_40">

    <RadioButton
        android:id="@+id/item_guard_type_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/item_guard_type_logo"
        android:layout_width="@dimen/qb_px_120"
        android:layout_height="@dimen/qb_px_120"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/item_guard_type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/qb_px_40"
        app:layout_constraintStart_toEndOf="@id/item_guard_type_logo"
        app:layout_constraintTop_toTopOf="@id/item_guard_type_logo"
        app:layout_constraintBottom_toBottomOf="@id/item_guard_type_logo"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/qb_px_20"
        />
</android.support.constraint.ConstraintLayout>