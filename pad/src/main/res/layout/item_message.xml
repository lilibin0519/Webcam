<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_activity_default"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/qb_px_10"
        android:padding="@dimen/qb_px_40">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/qb_px_110"
            android:layout_height="@dimen/qb_px_110"
            android:id="@+id/item_message_avatar"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/default_avatar"
            />
        <TextView
            android:id="@+id/item_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/qb_px_36"
            android:textColor="@color/label_gray"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="12:21"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/item_message_avatar"
            android:layout_toStartOf="@id/item_message_time"
            android:layout_marginStart="@dimen/qb_px_30"
            android:layout_marginEnd="@dimen/qb_px_30"
            >
            <TextView
                android:id="@+id/item_message_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/qb_px_44"
                android:textColor="@color/titleText"
                android:text="昵称"
                android:lines="1"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/item_message_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/qb_px_36"
                android:textColor="@color/label_gray"
                android:text="信息摘要"
                android:lines="1"
                android:ellipsize="end"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>