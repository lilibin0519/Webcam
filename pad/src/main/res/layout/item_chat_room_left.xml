<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/qb_px_20">
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        />
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_chat_room_left_avatar"
        android:layout_width="@dimen/qb_px_120"
        android:layout_height="@dimen/qb_px_120"
        app:riv_corner_radius="@dimen/qb_px_60"
        app:riv_border_color="@color/colorAccent"
        app:riv_border_width="@dimen/qb_px_3"
        android:src="@drawable/default_avatar"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/item_chat_room_left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/qb_px_700"
        android:paddingEnd="@dimen/qb_px_20"
        android:paddingStart="@dimen/qb_px_40"
        android:paddingTop="@dimen/qb_px_10"
        android:paddingBottom="@dimen/qb_px_10"
        android:background="@drawable/background_message_other"
        android:textSize="@dimen/qb_px_40"
        android:textColor="@android:color/white"
        android:visibility="gone"
        android:layout_toEndOf="@id/item_chat_room_left_avatar"
        android:layout_marginTop="@dimen/qb_px_30"
        android:layout_marginStart="@dimen/qb_px_20"
        />
    <ImageView
        android:id="@+id/item_chat_room_left_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/qb_px_700"
        android:maxHeight="@dimen/qb_px_700"
        android:scaleType="fitCenter"
        android:contentDescription="@string/app_name"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:layout_toEndOf="@id/item_chat_room_left_avatar"
        android:layout_marginTop="@dimen/qb_px_30"
        android:layout_marginStart="@dimen/qb_px_20"
        />
</RelativeLayout>