<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/bg_cash"
    android:padding="@dimen/qb_px_60"
    >

    <LinearLayout
        android:layout_width="@dimen/qb_px_540"
        android:layout_height="@dimen/qb_px_540"
        android:background="@drawable/bg_cash_circle"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="@dimen/qb_px_64"
            android:layout_height="@dimen/qb_px_56"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_diamond"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/qb_px_44"
            android:textColor="@android:color/white"
            android:layout_marginTop="@dimen/qb_px_40"
            android:text="余额"
            />
        <TextView
            android:id="@+id/header_cash_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/qb_px_66"
            android:textColor="@android:color/white"
            android:layout_marginTop="@dimen/qb_px_40"
            android:text="200.00"
            />
    </LinearLayout>
</RelativeLayout>