<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.wstv.webcam.widget.CustomVideoView
        android:id="@+id/activity_video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:clickable="false"
        />
    <ImageView
        android:id="@+id/activity_video_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_translucent"
        >
        <include layout="@layout/title_bar_transparent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/qb_px_180"
        android:background="@drawable/bg_layout_user"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/qb_px_120"
        android:paddingStart="@dimen/qb_px_50"
        android:paddingEnd="@dimen/qb_px_200"
        >
        <TextView
            android:id="@+id/activity_video_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/qb_px_48"
            android:textColor="@android:color/white"
            tools:text="\@宇宙无敌小公主"
            />
        <TextView
            android:id="@+id/activity_video_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/qb_px_40"
            android:textColor="@android:color/white"
            android:layout_marginTop="@dimen/qb_px_40"
            tools:text="睡了一天的我，现在要出门玩耍了，有没有一起偶遇的，中央三十二号，这里集合"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_video_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/qb_px_50"
        android:layout_marginBottom="@dimen/qb_px_240"
        >
        <ImageView
            android:layout_width="@dimen/qb_px_110"
            android:layout_height="@dimen/qb_px_110"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_video_share"
            />

        <TextView
            android:id="@+id/activity_video_share_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/qb_px_44"
            tools:text="44"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_video_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/activity_video_share"
        android:layout_marginEnd="@dimen/qb_px_50"
        android:layout_marginBottom="@dimen/qb_px_50"
        >
        <ImageView
            android:id="@+id/activity_video_like_image"
            android:layout_width="@dimen/qb_px_110"
            android:layout_height="@dimen/qb_px_110"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_video_not_like"
            />

        <TextView
            android:id="@+id/activity_video_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/qb_px_44"
            tools:text="44"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_video_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/activity_video_like"
        android:layout_marginEnd="@dimen/qb_px_50"
        android:layout_marginBottom="@dimen/qb_px_50"
        >
        <ImageView
            android:layout_width="@dimen/qb_px_110"
            android:layout_height="@dimen/qb_px_110"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_video_comment"
            />

        <TextView
            android:id="@+id/activity_video_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/qb_px_44"
            tools:text="44"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/activity_video_avatar_layout"
        android:layout_width="@dimen/qb_px_160"
        android:layout_height="@dimen/qb_px_190"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/activity_video_comment"
        android:layout_marginEnd="@dimen/qb_px_28"
        android:layout_marginBottom="@dimen/qb_px_50"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/activity_video_avatar"
            android:layout_width="@dimen/qb_px_160"
            android:layout_height="@dimen/qb_px_160"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/default_avatar"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_width="@dimen/qb_px_4"
            />
        <ImageView
            android:id="@+id/activity_video_follow"
            android:layout_width="@dimen/qb_px_70"
            android:layout_height="@dimen/qb_px_70"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/qb_px_12"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_follow"
            android:background="@drawable/bg_pink_circle"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>
</RelativeLayout>