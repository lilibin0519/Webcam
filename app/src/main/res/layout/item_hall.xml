<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_hall_image"
        android:layout_width="@dimen/qb_px_480"
        android:layout_height="@dimen/qb_px_480"
        app:riv_corner_radius="@dimen/qb_px_40"
        android:background="@drawable/bg_hall"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/item_hall_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/qb_px_36"
        android:textColor="@color/colorPrimary"
        tools:text="4106"
        android:layout_alignBottom="@id/item_hall_image"
        android:layout_alignEnd="@id/item_hall_image"
        android:layout_marginEnd="@dimen/qb_px_20"
        android:layout_marginBottom="@dimen/qb_px_20"
        android:background="@drawable/bg_chat_radius"
        android:paddingStart="@dimen/qb_px_10"
        android:paddingEnd="@dimen/qb_px_10"
        android:paddingTop="@dimen/qb_px_5"
        android:paddingBottom="@dimen/qb_px_5"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_hall_image"
        android:layout_alignStart="@id/item_hall_image"
        android:layout_toStartOf="@id/item_hall_views"
        android:layout_marginStart="@dimen/qb_px_20"
        android:layout_marginBottom="@dimen/qb_px_20"
        android:layout_marginEnd="@dimen/qb_px_20">
        <TextView
            android:id="@+id/item_hall_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/qb_px_36"
            android:textColor="@color/colorPrimary"
            tools:text="主播昵称"
            android:background="@drawable/bg_chat_radius"
            android:paddingStart="@dimen/qb_px_10"
            android:paddingEnd="@dimen/qb_px_10"
            android:paddingTop="@dimen/qb_px_5"
            android:paddingBottom="@dimen/qb_px_5"
            android:lines="1"
            android:ellipsize="end"
            />
    </LinearLayout>
</RelativeLayout>