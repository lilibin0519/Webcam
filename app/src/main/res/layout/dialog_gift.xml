    <android.support.v7.widget.RecyclerView
        android:id="@+id/dialog_gift_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_gift_list"
        android:orientation="horizontal"
        android:paddingTop="@dimen/qb_px_20"
        android:paddingBottom="@dimen/qb_px_20"
        android:paddingStart="@dimen/qb_px_40"
        android:paddingEnd="@dimen/qb_px_40"
        >
        <LinearLayout
            android:id="@+id/dialog_gift_cash_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            >
            <ImageView
                android:layout_width="@dimen/qb_px_80"
                android:layout_height="@dimen/qb_px_72"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_account"
                android:layout_marginEnd="@dimen/qb_px_20"
                />
            <TextView
                android:id="@+id/dialog_gift_list_account"
                android:layout_width="@dimen/qb_px_160"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/qb_px_40"
                android:text="477.8万"
                android:layout_marginEnd="@dimen/qb_px_20"
                />
            <ImageView
                android:layout_width="@dimen/qb_px_22"
                android:layout_height="@dimen/qb_px_40"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_arrow_enter"
                android:layout_marginEnd="@dimen/qb_px_20"
                />
            <TextView
                android:id="@+id/dialog_gift_list_get_with"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:paddingTop="@dimen/qb_px_10"
                android:paddingBottom="@dimen/qb_px_10"
                android:paddingStart="@dimen/qb_px_20"
                android:paddingEnd="@dimen/qb_px_20"
                android:textSize="@dimen/qb_px_34"
                android:text="守护"
                android:layout_marginEnd="@dimen/qb_px_20"
                android:background="@drawable/bg_pink_circle"
                android:visibility="gone"
                />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/dialog_gift_type_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_black_circle"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/dialog_gift_cash_layout"
            />
        <LinearLayout
            android:id="@+id/dialog_gift_list_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/qb_px_40"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dialog_gift_list_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/qb_px_60"
                android:text="1"
                android:layout_marginEnd="@dimen/qb_px_20"
                />

            <TextView
                android:id="@+id/dialog_gift_list_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/qb_px_60"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="+"
                android:gravity="center"
                />
        </LinearLayout>
        <Button
            android:id="@+id/dialog_gift_list_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赠送"
            android:minHeight="@dimen/qb_px_0"
            android:visibility="gone"
            android:textColor="@color/label_small_gray"
            android:textSize="@dimen/qb_px_40"
            android:background="@drawable/bg_gray_dark_radius"
            android:paddingTop="@dimen/qb_px_20"
            android:paddingBottom="@dimen/qb_px_20"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_gift_list">
        <include layout="@layout/line_layout" />
    </LinearLayout>
</RelativeLayout>