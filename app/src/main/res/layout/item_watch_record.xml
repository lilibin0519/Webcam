<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="@dimen/qb_px_60"
    android:paddingEnd="@dimen/qb_px_60"
    android:paddingTop="@dimen/qb_px_36">
    <LinearLayout
        android:id="@+id/item_watch_record_avatar_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_watch_record_avatar"
            android:layout_width="@dimen/qb_px_112"
            android:layout_height="@dimen/qb_px_112"
            app:civ_border_width="@dimen/qb_px_3"
            app:civ_border_color="@color/colorAccent"
            android:src="@drawable/default_avatar"
            android:layout_centerVertical="true"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/item_watch_record_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textColor="@color/label_gray"
        android:textSize="@dimen/qb_px_30"
        android:text="2小时前"
        android:gravity="center"
        />
    <LinearLayout
        android:id="@+id/item_watch_record_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_toEndOf="@id/item_watch_record_avatar_layout"
        android:layout_toStartOf="@id/item_watch_record_time"
        android:layout_marginStart="@dimen/qb_px_60"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/item_watch_record_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/titleText"
                android:textSize="@dimen/qb_px_40"
                tools:text="4"
                android:lines="1"
                android:ellipsize="end"
                android:maxWidth="@dimen/qb_px_600"
                />
            <ImageView
                android:id="@+id/item_watch_record_gender"
                android:layout_width="@dimen/qb_px_32"
                android:layout_height="@dimen/qb_px_32"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_gender_female"
                android:scaleType="fitCenter"
                android:layout_marginStart="@dimen/qb_px_20"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/qb_px_16"
            >
            <ImageView
                android:layout_width="@dimen/qb_px_100"
                android:layout_height="@dimen/qb_px_38"
                android:scaleType="fitXY"
                android:contentDescription="@string/app_name"
                android:id="@+id/item_watch_record_level_logo"
                android:src="@drawable/level1"
                />
            <LinearLayout
                android:layout_width="@dimen/qb_px_100"
                android:layout_height="@dimen/qb_px_38"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/qb_px_20"
                android:background="@drawable/bg_level"
                android:visibility="gone"
                >
                <ImageView
                    android:id="@+id/item_watch_record_level_image"
                    android:layout_width="@dimen/qb_px_32"
                    android:layout_height="@dimen/qb_px_32"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/icon_gender_female"
                    android:scaleType="fitCenter"
                    android:layout_marginStart="@dimen/qb_px_10"
                    />
                <TextView
                    android:id="@+id/item_watch_record_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/qb_px_22"
                    tools:text="VII"
                    android:layout_marginStart="@dimen/qb_px_10"
                    android:layout_marginEnd="@dimen/qb_px_10"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_watch_record_center"
        android:layout_marginTop="@dimen/qb_px_36">
        <include layout="@layout/line_layout" />
    </LinearLayout>
</RelativeLayout>