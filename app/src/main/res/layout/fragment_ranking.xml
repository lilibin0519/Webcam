<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_recycler_parent"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_ranking_title"
        >
        <View
            android:id="@+id/temp_status"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            />
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            app:contentInsetStart="0px"
            android:fitsSystemWindows="true"
            android:id="@+id/title_bar_parent"
            android:minHeight="0dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/titleBar">
            <RelativeLayout
                android:id="@+id/title_bar_background"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_126"
                android:background="@color/colorPrimary"
                >
                <LinearLayout
                    android:id="@+id/title_bar_left"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/qb_px_126"
                    android:minWidth="@dimen/qb_px_126"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:paddingEnd="@dimen/qb_px_24"
                    android:paddingStart="@dimen/qb_px_24"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:id="@+id/title_bar_left_image"
                        android:layout_width="@dimen/qb_px_60"
                        android:layout_height="@dimen/qb_px_60"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_back"
                        android:tint="@color/titleText"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_ranking_type_layout"
                    android:layout_width="@dimen/qb_px_500"
                    android:layout_height="@dimen/qb_px_70"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_pink_light_bolder_pink"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/qb_px_40"
                    android:paddingEnd="@dimen/qb_px_40"
                    >
                    <TextView
                        android:id="@+id/fragment_ranking_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/qb_px_30"
                        android:textColor="@color/label_gray"
                        />
                    <ImageView
                        android:layout_width="@dimen/qb_px_30"
                        android:layout_height="@dimen/qb_px_30"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_arrow_down"
                        android:tint="@color/pink"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_1"
                    android:background="@color/line_color"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </LinearLayout>
    <com.libin.mylibrary.widget.swiperecyclerview.SwipeRecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_ranking_content"
        android:layout_below="@id/fragment_ranking_title"
        />
</RelativeLayout>