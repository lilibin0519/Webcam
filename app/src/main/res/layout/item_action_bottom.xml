<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/item_action_bottom_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/qb_px_40">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/item_action_bottom_like"
                android:layout_width="@dimen/qb_px_70"
                android:layout_height="@dimen/qb_px_70"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_action_like"
                android:scaleType="fitCenter"
                />
            <TextView
                android:id="@+id/item_action_bottom_like_count"
                android:layout_width="@dimen/qb_px_80"
                android:layout_height="wrap_content"
                android:textColor="@color/titleText"
                android:textSize="@dimen/qb_px_40"
                tools:text="09"
                android:layout_marginStart="@dimen/qb_px_20"
                />
            <LinearLayout
                android:id="@+id/item_action_bottom_comment_count_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="@dimen/qb_px_70"
                    android:layout_height="@dimen/qb_px_70"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/icon_action_comment"
                    android:layout_marginStart="@dimen/qb_px_20"
                    />
                <TextView
                    android:id="@+id/item_action_bottom_comment_count"
                    android:layout_width="@dimen/qb_px_80"
                    android:layout_height="wrap_content"
                    android:textColor="@color/titleText"
                    android:textSize="@dimen/qb_px_40"
                    android:layout_marginStart="@dimen/qb_px_20"
                    tools:text="12"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/item_action_bottom_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/titleText"
            android:textSize="@dimen/qb_px_36"
            tools:text="2019.03.26 22:36"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_action_bottom_layout"
        >
        <include layout="@layout/line_layout" />
    </LinearLayout>
</RelativeLayout>