        <LinearLayout
            android:id="@+id/title_bar_edit_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_86"
            android:paddingStart="@dimen/qb_px_40"
            android:paddingEnd="@dimen/qb_px_40"
            android:layout_marginStart="@dimen/qb_px_50"
            android:layout_marginEnd="@dimen/qb_px_150"
            android:background="@drawable/bg_gray_radius"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="@dimen/qb_px_36"
                android:layout_height="@dimen/qb_px_36"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_search"
                android:scaleType="fitCenter"
                />
            <EditText
                android:id="@+id/title_bar_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/qb_px_20"
                android:textSize="@dimen/qb_px_42"
                android:textColor="@color/titleText"
                android:hint="@string/app_name"
                android:textColorHint="@color/hint"
                android:singleLine="true"
                android:background="@null"
                android:imeOptions="actionSearch"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/title_bar_right"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/qb_px_144"
            android:minWidth="@dimen/qb_px_126"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/qb_px_24"
            android:paddingStart="@dimen/qb_px_24"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/title_bar_right_image"
                android:layout_width="@dimen/qb_px_70"
                android:layout_height="@dimen/qb_px_70"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/title_bar_right_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/qb_px_52"
                android:textColor="@color/titleText"
                android:text="@string/label_cancel"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_1"
            android:background="@color/line_color"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
