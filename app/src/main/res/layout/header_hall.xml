<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    >

    <com.youth.banner.Banner
        android:id="@+id/header_hall_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_575"
        android:background="@drawable/bg_banner"
        android:layout_marginBottom="@dimen/qb_px_30"
        />
    <RelativeLayout
        android:layout_below="@id/header_hall_banner"
        android:id="@+id/header_hall_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_alignParentStart="true"
            android:paddingStart="@dimen/qb_px_40"
            android:paddingEnd="@dimen/qb_px_40"
            android:paddingTop="@dimen/qb_px_30"
            android:paddingBottom="@dimen/qb_px_30"
            >
            <ImageView
                android:layout_width="@dimen/qb_px_40"
                android:layout_height="@dimen/qb_px_40"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_recommend"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/qb_px_20"
                android:textSize="@dimen/qb_px_40"
                android:textColor="@color/titleText"
                android:text="@string/label_recommend_you"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/header_hall_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_alignParentEnd="true"
            android:paddingStart="@dimen/qb_px_40"
            android:paddingEnd="@dimen/qb_px_40"
            android:paddingTop="@dimen/qb_px_30"
            android:paddingBottom="@dimen/qb_px_30"
            >
            <ImageView
                android:layout_width="@dimen/qb_px_30"
                android:layout_height="@dimen/qb_px_30"
                android:contentDescription="@string/app_name"
                android:layout_marginEnd="@dimen/qb_px_20"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_view_history"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/qb_px_40"
                android:textColor="@color/titleText"
                android:text="@string/label_watch_record"
                android:layout_marginEnd="@dimen/qb_px_20"
                />
            <ImageView
                android:layout_width="@dimen/qb_px_30"
                android:layout_height="@dimen/qb_px_30"
                android:contentDescription="@string/app_name"
                android:src="@drawable/arrow_right"
                android:tint="@color/pink"
                android:scaleType="fitCenter"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>