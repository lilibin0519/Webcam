<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="0dp"
    app:contentInsetStart="0px"
    android:fitsSystemWindows="true"
    android:id="@+id/title_bar_parent"
    android:minHeight="0dp"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    app:theme="@style/titleBar">
    <RelativeLayout
        android:id="@+id/title_bar_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_126"
        android:background="@color/transparent"
        >
        <LinearLayout
            android:id="@+id/title_bar_left"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/qb_px_126"
            android:minWidth="@dimen/qb_px_126"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingEnd="@dimen/qb_px_24"
            android:paddingStart="@dimen/qb_px_24"
            >
            <ImageView
                android:id="@+id/title_bar_left_image"
                android:layout_width="@dimen/qb_px_60"
                android:layout_height="@dimen/qb_px_60"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_back"
                />
            <TextView
                android:id="@+id/title_bar_left_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/qb_px_52"
                android:textColor="@color/titleText"
                android:visibility="gone" />
        </LinearLayout>
        <TextView
            android:id="@+id/title_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/qb_px_52"
            android:textColor="@color/titleText"
            tools:text="@string/app_name"
            android:layout_marginStart="@dimen/qb_px_150"
            android:layout_marginEnd="@dimen/qb_px_150"
            android:lines="1"
            android:ellipsize="end"
            />
        <LinearLayout
            android:id="@+id/title_bar_right"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/qb_px_126"
            android:minWidth="@dimen/qb_px_126"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/qb_px_24"
            android:paddingStart="@dimen/qb_px_24"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            >
            <ImageView
                android:id="@+id/title_bar_right_image"
                android:layout_width="@dimen/qb_px_60"
                android:layout_height="@dimen/qb_px_60"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/title_bar_right_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/qb_px_52"
                android:textColor="@color/titleText"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.Toolbar>